{
  "manifest_version": 3,
  "name": "Always Private",
  "version": "1.1",
  "description": "Opens non-whitelisted domains in a private window.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon-48.svg"
    }
  },
  "icons": {
    "48": "icons/icon-48.svg"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "alwaysprivate@example.com"
    }
  }
}

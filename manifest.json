{
  "manifest_version": 2,
  "name": "Always Private",
  "version": "1.0",
  "description": "Opens non-whitelisted domains in a private window.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon-48.svg"
    }
  },
  "icons": {
    "48": "icons/icon-48.svg"
  }
}
